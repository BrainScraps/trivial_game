<nav>
  Nav Bar
  <div id="brand_title">Brand</div>
  <div id="new_game">New Game</div>
</nav>

<div id="game_window">
  Game Window
  <div id="host_box">
    Host Box
    <div id="host">
      <%= image_tag "https://raw.github.com/emailmejason/solo/master/app/assets/images/octocat.png" %>
    </div>
  </div>

  <div id="speech_box">
    Speech Box
    <span id="question_number">Question Number</span>
    <div id="question">Question Text</div>
    <div class="answer" id="a1">Answer 1</div>
    <div class="answer" id="a2">Answer 2</div>
    <div class="answer" id="a3">Answer 3</div>
    <div class="answer" id="a4">Answer 4</div>
  </div>
</div>

<div id="score_footer">
  Score Box
  <div class="player_container" id="p1_container">
    Player One Container
    <div class="score_box" id="p1_score">Player 1 Score</div>
    <div class="name_box" id="p1_name">Player 1 Name</div>
    <div class="key" id="p1_key">A</div>
  </div>
  <div class="player_container" id="p2_container">
    Player Two Container
    <div class="score_box" id="p2_score">Player 2 Score</div>
    <div class="name_box" id="p2_name">Player 2 Name</div>
    <div class="key" id="p1_key">B</div>
  </div>
  <div class="player_container" id="p3_container">
    Player Three Container
    <div class="score_box" id="p3_score">Player 3 Score</div>
    <div class="name_box" id="p3_name">Player 3 Name</div>
    <div class="key" id="p1_key">P</div>
  </div>
</div>